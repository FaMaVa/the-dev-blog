<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="card col-10 anton bright-border verylight-background mt-4" style="padding: 0;">
            <div
                class="card-header d-flex justify-content-between align-items-start rounded-0 light-words verydark-background">
                {{post_title}}<span class="dark-words align-text-bottom">Posted by {{user.username}} on {{post_date}}</span>
            </div>
            <div class="card-body">{{content}}</div>
        </div>
        <div class="card col-10 my-3 anton bright-border verylight-background" style="padding: 0;">
            <div class="card-header rounded-0 verydark-background"></div>
            <div class="card-body">
                <form class="newComment" style="margin-bottom: 0;">
                    <div class="mb-3">
                        <label for="yourComment" class="form-label verydark-words">Comment</label>
                        <textarea class="form-control" id="yourComment" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn light-background verydark-words"
                        style="width: 100%;">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="./js/comment.js"></script>