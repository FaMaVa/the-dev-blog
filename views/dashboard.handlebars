<div class="container-fluid">
    <div class="row justify-content-center">
        <ul class="list-group col-10 mt-3 mb-3">
            {{#each posts as |post|}}
            <li
                class="list-group-item d-flex justify-content-between align-items-center rounded my-2 anton bright-border verylight-background dark-words">
                <a class="dark-words" style="text-decoration: none;"
                    href="/dashboard/update/{{id}}">{{post.post_title}}</a>
                <span class="light-words">{{format_date post.post_date}}</span>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="container-fluid">
    <div class="row justify-content-center">
        <a type="button" class="btn mb-3 anton light-background verydark-words"  style="width: 200px;" href="/dashboard/create">New Post</a>
    </div>
</div>