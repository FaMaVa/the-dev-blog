{{#if logged_in}}
<div class="container-fluid">
    <div class="row justify-content-center">
        <ul class="list-group col-10 mt-3 mb-3">
            {{#each posts as |post|}}
            <li
                class="list-group-item d-flex justify-content-between align-items-center rounded my-2 anton bright-border verylight-background dark-words">
                <a class="dark-words" style="text-decoration: none;"
                    href="/dashboard/update/{{id}}">{{post.post_title}}</a>
                <span class="light-words">{{format_date post.post_date}}</span>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="container-fluid">
    <div class="row justify-content-center">
        <a type="button" class="btn btn-lg mb-3 px- anton light-background verydark-words" href="/dashboard/create"><i
                class="fa-solid fa-plus"></i> New Post</a>
    </div>
</div>
{{else}}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="card my-5 anton verydark-words bright-border verylight-background" style="padding: 0;">
            <div class="card-body">
                <div class="form-text">
                    To view the page, please Login
                    <a class="light-words" href="login">here!</a>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}