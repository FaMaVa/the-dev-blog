<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="card col-10 anton bright-border verylight-background mt-4" style="padding: 0;">
            <div
                class="card-header d-flex justify-content-between align-items-start rounded-0 light-words verydark-background">
                {{post.post_title}}<span class="dark-words align-text-bottom">Posted by {{post.user.username}} on {{format_date post.post_date}}</span>
            </div>
            <div class="card-body">{{post_content}}</div>
        </div>
        {{#each post.comments as |comment|}}
        <div class="card col-10 my-3 anton bright-border verylight-background" style="padding: 0;">
            <div class="card-header rounded-0 verydark-background"></div>
            <div class="card-body">
                <div>{{comment.comment_content}}</div>
                <div class="mt-3 dark-words">-{{comment.user.username}}, {{format_date comment.comment_date}}</div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<div class="row justify-content-center">
    <a type="button" class="mb-3 anton light-background verydark-words" href="/comment/{{post.id}}" style="width: 200px;">Comment on Post</a>
</div